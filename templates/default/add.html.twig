{% extends 'base.html.twig' %}

{% block body %}

   <!-- Navigation -->

  {% include('navbar.html.twig') %}
  

  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-left">
        <h3>Add new user</h3>
        
        <form action='/save/add/0' method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name"  placeholder="User name">
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description"  class="form-control"></textarea>
          </div>
          <h3>Users</h3>
      </div>
      <div class="col-lg-1"></div>
      <div class="col-lg-9 text-left">
          <div class="form-group">
              <label for="name_user">Name User</label>
              <input type="text" class="form-control" name="name_user">
           </div>
           <div class="form-group">
              <label for="password">Password</label>
              <input type="text" class="form-control" name="password">
           </div>
           <label for="role">Role</label>
              <div class="form-group">
                <input type="text" class="form-control" name="role">
              </div>
        
      </div>
      <div class="col-lg-2"></div>
      <div class="col-lg-12"><input type="submit" class="btn btn-primary" value=Submit></input></div>
  </div>
</div>

<br><br>
{% endblock %}